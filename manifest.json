{
	"manifest_version": 2,
	"name": "Project Portal",
	"version": "0.1.2",

	"description": "Tabs are a thing of the past!",
	"icons": {
		
	},
  "browser_action": {
      "default_title": "Hover",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },

	"background": {
		"scripts": ["background.js"]	
	},

	"content_scripts": [

			{
				"matches": [
					"http://*/*",
					"https://*/*"
				],
				"css": [],
	      		"js": [ "jquery.min.js", "jquery-ui.min.js", "jquery-ui.js", "Portal.js", "contentscript.js", "run.js"],
				"run_at": "document_idle",
				"all_frames": false
			}
		],
	"permissions": [
		"tabs", "webRequest", "webRequestBlocking", "http://*/*"
	]
}